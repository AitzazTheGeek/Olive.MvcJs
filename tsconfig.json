{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "typings",
        "noImplicitUseStrict": true,
        "sourceRoot": "src",
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": false
    },
    "exclude": [
      "typings",
      "dist"  
    ]
}

